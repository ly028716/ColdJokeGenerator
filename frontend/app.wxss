/**app.wxss**/

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: #333;
}

/* 全局容器 */
.container {
  min-height: 100vh;
}

/* 通用工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 边距工具类 */
.m-0 { margin: 0; }
.m-1 { margin: 16rpx; }
.m-2 { margin: 32rpx; }
.m-3 { margin: 48rpx; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 16rpx; }
.mt-2 { margin-top: 32rpx; }
.mt-3 { margin-top: 48rpx; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 16rpx; }
.mb-2 { margin-bottom: 32rpx; }
.mb-3 { margin-bottom: 48rpx; }

.ml-0 { margin-left: 0; }
.ml-1 { margin-left: 16rpx; }
.ml-2 { margin-left: 32rpx; }
.ml-3 { margin-left: 48rpx; }

.mr-0 { margin-right: 0; }
.mr-1 { margin-right: 16rpx; }
.mr-2 { margin-right: 32rpx; }
.mr-3 { margin-right: 48rpx; }

.p-0 { padding: 0; }
.p-1 { padding: 16rpx; }
.p-2 { padding: 32rpx; }
.p-3 { padding: 48rpx; }

/* 颜色工具类 */
.text-primary { color: #4A90E2; }
.text-secondary { color: #6c757d; }
.text-success { color: #28a745; }
.text-danger { color: #dc3545; }
.text-warning { color: #ffc107; }
.text-muted { color: #6c757d; }

.bg-primary { background-color: #4A90E2; }
.bg-secondary { background-color: #6c757d; }
.bg-success { background-color: #28a745; }
.bg-danger { background-color: #dc3545; }
.bg-warning { background-color: #ffc107; }
.bg-white { background-color: #ffffff; }

/* 字体大小工具类 */
.font-xs { font-size: 20rpx; }
.font-sm { font-size: 24rpx; }
.font-md { font-size: 28rpx; }
.font-lg { font-size: 32rpx; }
.font-xl { font-size: 36rpx; }

.font-weight-normal { font-weight: 400; }
.font-weight-medium { font-weight: 500; }
.font-weight-bold { font-weight: 600; }

/* 通用按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #4A90E2;
  color: white;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn::after {
  border: none;
}

.btn:active {
  background-color: #357ABD;
  transform: scale(0.98);
}

.btn-primary {
  background-color: #4A90E2;
}

.btn-secondary {
  background-color: #6c757d;
}

.btn-success {
  background-color: #28a745;
}

.btn-danger {
  background-color: #dc3545;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #4A90E2;
  color: #4A90E2;
}

.btn-outline:active {
  background-color: #4A90E2;
  color: white;
}

/* 按钮尺寸 */
.btn-sm {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.btn-lg {
  padding: 28rpx 56rpx;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-round {
  border-radius: 50rpx;
}

/* 禁用状态 */
.btn:disabled,
.btn.disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-body {
  padding: 32rpx;
}

.card-footer {
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #f8f9fa;
}

/* 通用列表样式 */
.list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.list-item {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item:active {
  background: #f5f5f5;
}

/* 通用表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.form-control {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-control:focus {
  background: white;
  border-color: #4A90E2;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

/* 通用标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  border-radius: 16rpx;
  margin: 4rpx;
}

.tag-primary {
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
}

.tag-success {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.tag-danger {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

/* 通用分割线 */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 32rpx 0;
}

/* 通用阴影 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.shadow {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 通用圆角 */
.rounded {
  border-radius: 8rpx;
}

.rounded-sm {
  border-radius: 4rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-xl {
  border-radius: 24rpx;
}

.rounded-full {
  border-radius: 50%;
}

/* 文本溢出 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 动画工具类 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.scale-in {
  animation: scaleIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes scaleIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* 安全区域适配 */
.safe-area-top {
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}