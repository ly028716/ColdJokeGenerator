.joke-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.joke-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 笑话内容 */
.joke-content {
  margin-bottom: 24rpx;
}

.joke-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333333;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* 笑话信息 */
.joke-info {
  margin-bottom: 24rpx;
}

.joke-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.category-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.category-icon {
  margin-right: 8rpx;
  font-size: 20rpx;
}

.category-name {
  font-weight: 500;
}

.joke-time {
  font-size: 24rpx;
  color: #999999;
}

/* 统计信息 */
.joke-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}

.stat-icon {
  margin-right: 8rpx;
  font-size: 20rpx;
}

.stat-text {
  font-weight: 500;
}

/* 操作按钮 */
.joke-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  min-width: 120rpx;
}

.action-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

/* 复制按钮 */
.copy-btn:active {
  background-color: #e3f2fd;
}

.copy-btn:active .action-text {
  color: #2196f3;
}

/* 收藏按钮 */
.favorite-btn:active {
  background-color: #fce4ec;
}

.favorite-btn:active .action-text {
  color: #e91e63;
}

.favorite-btn.favorited .action-text {
  color: #e91e63;
  font-weight: 600;
}

/* 分享按钮 */
.share-btn:active {
  background-color: #e8f5e8;
}

.share-btn:active .action-text {
  color: #4caf50;
}

.share-btn.sharing {
  opacity: 0.6;
  pointer-events: none;
}

.share-btn.sharing .action-text {
  color: #999999;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .joke-card {
    padding: 24rpx;
    margin: 12rpx 0;
  }
  
  .joke-text {
    font-size: 30rpx;
  }
  
  .action-btn {
    min-width: 100rpx;
    padding: 12rpx;
  }
  
  .action-icon {
    font-size: 28rpx;
  }
  
  .action-text {
    font-size: 22rpx;
  }
}