.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-description {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 32rpx;
  max-width: 400rpx;
}

.empty-button {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.empty-button:active {
  transform: scale(0.95);
}

.empty-button.primary {
  background: #4A90E2;
  color: white;
}

.empty-button.secondary {
  background: #f5f5f5;
  color: #666;
}

.button-text {
  font-size: 26rpx;
  font-weight: 500;
}