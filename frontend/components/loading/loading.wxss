.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.loading-container.show {
  opacity: 1;
  visibility: visible;
}

.loading-container.fullscreen {
  background: rgba(0, 0, 0, 0.5);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.loading-content.small {
  padding: 24rpx;
  gap: 12rpx;
}

.loading-content.large {
  padding: 60rpx;
  gap: 24rpx;
}

/* 默认加载样式 */
.loading-default {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
}

.loading-default.animate {
  animation: spin 1s linear infinite;
}

.small .loading-default {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
}

.large .loading-default {
  width: 56rpx;
  height: 56rpx;
  border-width: 6rpx;
}

/* 点状加载样式 */
.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #4A90E2;
}

.loading-dots.animate .dot:nth-child(1) {
  animation: dotBounce 1.4s ease-in-out infinite both;
  animation-delay: -0.32s;
}

.loading-dots.animate .dot:nth-child(2) {
  animation: dotBounce 1.4s ease-in-out infinite both;
  animation-delay: -0.16s;
}

.loading-dots.animate .dot:nth-child(3) {
  animation: dotBounce 1.4s ease-in-out infinite both;
}

.small .dot {
  width: 8rpx;
  height: 8rpx;
}

.large .dot {
  width: 16rpx;
  height: 16rpx;
}

/* 旋转器加载样式 */
.loading-spinner {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.spinner-item {
  position: absolute;
  width: 2rpx;
  height: 12rpx;
  background-color: #4A90E2;
  border-radius: 1rpx;
  transform-origin: 50% 20rpx;
}

.loading-spinner.animate .spinner-item {
  animation: spinnerFade 1.2s linear infinite;
}

.spinner-item:nth-child(1) { transform: rotate(0deg); animation-delay: 0s; }
.spinner-item:nth-child(2) { transform: rotate(30deg); animation-delay: -0.1s; }
.spinner-item:nth-child(3) { transform: rotate(60deg); animation-delay: -0.2s; }
.spinner-item:nth-child(4) { transform: rotate(90deg); animation-delay: -0.3s; }
.spinner-item:nth-child(5) { transform: rotate(120deg); animation-delay: -0.4s; }
.spinner-item:nth-child(6) { transform: rotate(150deg); animation-delay: -0.5s; }
.spinner-item:nth-child(7) { transform: rotate(180deg); animation-delay: -0.6s; }
.spinner-item:nth-child(8) { transform: rotate(210deg); animation-delay: -0.7s; }
.spinner-item:nth-child(9) { transform: rotate(240deg); animation-delay: -0.8s; }
.spinner-item:nth-child(10) { transform: rotate(270deg); animation-delay: -0.9s; }
.spinner-item:nth-child(11) { transform: rotate(300deg); animation-delay: -1.0s; }
.spinner-item:nth-child(12) { transform: rotate(330deg); animation-delay: -1.1s; }

.small .loading-spinner {
  width: 32rpx;
  height: 32rpx;
}

.small .spinner-item {
  height: 8rpx;
  transform-origin: 50% 16rpx;
}

.large .loading-spinner {
  width: 56rpx;
  height: 56rpx;
}

.large .spinner-item {
  width: 3rpx;
  height: 16rpx;
  transform-origin: 50% 28rpx;
}

/* 加载文本 */
.loading-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.small .loading-text {
  font-size: 22rpx;
}

.large .loading-text {
  font-size: 30rpx;
}

/* 动画定义 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes dotBounce {
  0%, 80%, 100% {
    transform: scale(0);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes spinnerFade {
  0%, 39%, 100% {
    opacity: 0;
  }
  40% {
    opacity: 1;
  }
}