page {
  background: #F8F9FA;
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #F8F9FA;
}

/* 顶部标题栏 */
.header {
  width: 100%;
  height: 120rpx;
  background: #FF6B6B;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.header-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 140rpx 40rpx 120rpx;
}

/* 区域标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  color: #2C3E50;
  font-size: 32rpx;
  font-weight: bold;
}

/* 笑话内容显示区 */
.joke-display-section {
  margin-bottom: 40rpx;
}

.joke-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #E9ECEF;
  margin-bottom: 20rpx;
}

.joke-content {
  display: block;
  color: #495057;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.joke-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.joke-tag {
  background: #4ECDC4;
  border-radius: 24rpx;
  padding: 8rpx 20rpx;
}

.tag-text {
  color: white;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 24rpx;
  border: 2rpx solid #E9ECEF;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  color: #6C757D;
  font-size: 28rpx;
  text-align: center;
}

/* 参数设置区域 */
.settings-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #E9ECEF;
  margin-bottom: 40rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  color: #495057;
  font-size: 28rpx;
  font-weight: 500;
}

.slider-container {
  flex: 1;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}

.slider-label {
  color: #6C757D;
  font-size: 24rpx;
  margin-left: 20rpx;
  min-width: 60rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  background: #4ECDC4;
  border-radius: 24rpx;
  padding: 12rpx 24rpx;
}

.picker-text {
  color: white;
  font-size: 24rpx;
}

.picker-arrow {
  color: white;
  font-size: 20rpx;
  margin-left: 12rpx;
}

/* 操作按钮组 */
.action-buttons {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #E9ECEF;
  margin-bottom: 40rpx;
  display: flex;
  gap: 20rpx;
}

.generate-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: #FF6B6B;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.generate-btn:active {
  transform: scale(0.95);
}

.generate-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.favorite-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: #FFE66D;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.favorite-btn:active {
  transform: scale(0.95);
}

.share-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: #4ECDC4;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.share-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: bold;
}

.generate-btn .btn-text {
  color: white;
}

.favorite-btn .btn-text {
  color: #2C3E50;
}

.share-btn .btn-text {
  color: white;
}

/* 统计信息 */
.stats-section {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  border: 2rpx solid #E9ECEF;
  margin-bottom: 40rpx;
}

.stats-content {
  background: #E7F3FF;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
}

.stats-text {
  color: #2C3E50;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .header {
    padding: 24rpx 24rpx 20rpx;
  }
  
  .main-title {
    font-size: 36rpx;
  }
  
  .main-content {
    padding: 0 24rpx 120rpx;
  }
  
  .bottom-actions {
    padding: 20rpx 24rpx;
  }
  
  .generate-btn {
    height: 88rpx;
  }
}