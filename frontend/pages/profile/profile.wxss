page {
  background: #F8F9FA;
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: #F8F9FA;
}

/* 顶部标题栏 */
.header {
  width: 100%;
  height: 120rpx;
  background: #FF6B6B;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}

.header-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 24rpx;
  margin: 160rpx 40rpx 40rpx;
  padding: 40rpx;
  border: 2rpx solid #E9ECEF;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar-container {
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #FF6B6B;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #F8F9FA;
  border: 4rpx solid #E9ECEF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 48rpx;
  color: #6C757D;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  color: #2C3E50;
  font-size: 36rpx;
  font-weight: bold;
}

.user-desc {
  color: #6C757D;
  font-size: 26rpx;
}

/* 统计信息 */
.stats-row {
  display: flex;
  justify-content: space-around;
  background: #FFF3CD;
  border: 2rpx solid #FFE66D;
  border-radius: 20rpx;
  padding: 32rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  color: #FF6B6B;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  color: #6C757D;
  font-size: 24rpx;
}

/* 功能菜单 */
.menu-section {
  background: white;
  border-radius: 24rpx;
  margin: 0 40rpx 40rpx;
  padding: 20rpx 0;
  border: 2rpx solid #E9ECEF;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #F8F9FA;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #F8F9FA;
  transform: scale(0.98);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 40rpx;
  text-align: center;
}

.menu-title {
  flex: 1;
  color: #2C3E50;
  font-size: 30rpx;
  font-weight: 500;
}

.menu-arrow {
  color: #6C757D;
  font-size: 32rpx;
}

/* 其他操作 */
.action-section {
  background: white;
  border-radius: 24rpx;
  margin: 0 40rpx 40rpx;
  padding: 20rpx 0;
  border: 2rpx solid #E9ECEF;
}

.action-item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 24rpx 40rpx;
  border-bottom: 2rpx solid #F8F9FA;
  transition: all 0.3s ease;
  background: transparent;
  border-left: none;
  border-right: none;
  border-top: none;
  width: 100%;
  text-align: left;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: #F8F9FA;
  transform: scale(0.98);
}

.share-btn {
  border-radius: 0;
}

.share-btn::after {
  border: none;
}

.action-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  width: 40rpx;
  text-align: center;
}

.action-text {
  color: #2C3E50;
  font-size: 28rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx;
  margin-top: auto;
}

.version-text {
  color: #6C757D;
  font-size: 24rpx;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.footer-btn:active {
  transform: scale(0.98);
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.submit-btn {
  background: #4A90E2;
  color: white;
}

/* 设置面板 */
.settings-panel {
  max-height: 70vh;
}

.setting-group {
  margin-bottom: 40rpx;
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.picker-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333;
  min-width: 120rpx;
  justify-content: space-between;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.temperature-slider {
  width: 200rpx;
}

/* 反馈面板 */
.feedback-panel {
  max-height: 80vh;
}

.feedback-type {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.feedback-content {
  position: relative;
}

.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.char-count {
  position: absolute;
  bottom: 12rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #999;
}

/* 关于面板 */
.about-panel {
  max-height: 80vh;
}

.app-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 40rpx;
}

.logo-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.app-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
}

.app-description {
  margin-bottom: 40rpx;
}

.desc-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.app-features {
  margin-bottom: 40rpx;
}

.features-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.feature-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.feature-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.app-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .user-card {
    margin: 160rpx 24rpx 40rpx;
    padding: 32rpx;
  }
  
  .stats-row {
    padding: 24rpx 0;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .menu-section,
  .action-section {
    margin: 0 24rpx 40rpx;
  }
  
  .menu-item,
  .action-item {
    padding: 24rpx 32rpx;
  }
  
  .modal-overlay {
    padding: 24rpx;
  }
  
  .modal-body {
    padding: 24rpx;
  }
  
  .modal-footer {
    padding: 24rpx;
  }
}